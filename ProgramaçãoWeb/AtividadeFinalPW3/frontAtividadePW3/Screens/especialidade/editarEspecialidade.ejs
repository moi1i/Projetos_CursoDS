<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <div class="card">

            <div class="card-header">
                <h3>Edição de especialidade</h3>
            </div>

            <div class="card-body">

                <form action="http://localhost:3000/Especialidade/alterarEspecialidade"
                method="post">

                    <label for="nome_especialidade"></label>

                    <input class="form-control" type="text" 
                    name="nome_especialidade" id="nome_especialidade"
                    value="<%= especialidade.nome_especialidade %>"
                    placeholder="NOME DA ESPECIALIDADE">

                    <input type="hidden" name="id" 
                    value="<%= especialidade.id %>">

                    <button class="btn btn-success mt-2">Editar</button>

                </form>

            </div>

        </div>

    </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>